{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "clean": {
      "cache": false,
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build", "^test"]
    },
    "test:e2e": {
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "changelog:update": {
      "cache": false
    },
    "changelog:validate": {
      "cache": false
    }
  }
}
